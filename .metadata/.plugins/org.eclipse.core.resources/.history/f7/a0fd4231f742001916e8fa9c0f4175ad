public class Snippet {
	<bean id="zhangsan" class="com.spring.demo.User">
		<!-- set注入标签 property
			 name对应的是user类中的name属性
			 value给name属性赋值
		 -->
			<property name="id" value="20"></property>
			<property name="name" value="goldDragon"></property>
			<property name="pwd" value="123456"></property>
		</bean>
	
		<bean id="lisi" class="com.spring.demo.User">
			<property name="id" value="30"></property>
